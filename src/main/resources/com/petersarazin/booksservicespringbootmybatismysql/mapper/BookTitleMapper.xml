<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.petersarazin.booksservicespringbootmybatismysql.mapper.BookTitleMapper">
    <select id="getBookTitle" parameterType="int" resultType="com.petersarazin.booksservicespringbootmybatismysql.domain.BookTitle">
        select * from book_title where book_title_id=#{bookTitleId}
    </select>

    <resultMap id="BookTitleResult" type="com.petersarazin.booksservicespringbootmybatismysql.domain.BookTitle">
        <id property="bookTitleId" column="book_title_id"/>
        <result property="title" column="title"/>
        <result property="subtitle" column="subtitle"/>
        <result property="volume" column="volume"/>
        <result property="volumeTitle" column="volume_title"/>
    </resultMap>

</mapper>